html 
  head
    title= title
    link(rel='stylesheet', href='css/bootstrap.min.css')
    script(src="js/jquery.min.js")
    script(src="js/popper.min.js")
    script(src="js/bootstrap.min.js")
  body
    div.container
      div.row
        div.col-md-5.mx-md-5
          h1= message
          div.card.shadow.rounded-0.mt-5
            div.card-body
              form(action='create_account', method='post')
                div.form-group
                  label= 'Email'
                  input.form-control.rounded-0(type='email' name='email')
                div.form-group
                  label= 'Name'
                  input.form-control.rounded-0(type='text' name='name')
                div.form-group
                  label= 'Contact'
                  input.form-control.rounded-0(type='text' name='contact')
                div.form-group
                  label= 'Password'
                  input.form-control.rounded-0(type='password' name='confirmation')
                div.form-group
                  button.btn.btn-primary.btn-lg.btn-block.rounded-0(type='submit')= 'Register Now'
            a.ml-4.mb-4(href='/')
